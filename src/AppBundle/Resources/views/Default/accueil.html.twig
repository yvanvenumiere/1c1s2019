                </div>
            </div>

        </div>
    </section>

    <!-- ##### Portfolio Area Start ###### -->
    <div class="pixel-portfolio-area section-padding-100">
        <!-- Portfolio Menu -->
        <div class="pixel-projects-menu">
            <div class="text-center portfolio-menu">
                <button class="btn active" data-filter="*">Tout</button>
                {% for tag in infosCats.tags %}
                <button class="btn" data-filter="{{ tag[0] }}">{{ tag[1] }}</button>
                {% endfor %}
            </div>
        </div>

        <div class="pixel-portfolio">

            {% for template in  infosCats.templates %}
                <div class="single_gallery_item visual wow fadeInUp" data-wow-delay="0.2s">
                    <img src="{{ path('al_get_image',{name:template.wt_vignette,resizetype:'crop',format:'800X1022'}) }}" alt="">
                    <div class="hover-content text-center d-flex align-items-center justify-content-center">
                        <div class="hover-text">
                            <a href="{{ path('produit',{ref:'site-web'~'-'~template.wt_name|slug,id:template.idw_templates}) }}" alt="{{ template.wt_name }}" class="zoom-img"><i class="fa fa-eye" aria-hidden="true"></i></a>
                            <h4>{{ template.wt_name }}</h4>
                        </div>
                    </div>
                </div>
            {% endfor %}


        </div>

